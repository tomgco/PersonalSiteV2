/*
 * Styles which are common to all pages
 */

#container
  width 900px
  margin 30px auto

$topPaddingLogo = 250px
$bottomPaddingLogo = 50px

.site-logo
  a
    text-decoration none

#main-footer
  color rgba(0, 0, 0, 0.3);
  margin-top 70px

#main-header
#main-nav
  margin 0 auto 40px

#main-header h1
  font-family 'SteinerRegular'
  font-size 32px
  text-shadow 0px 1px 0px #ddd
  color #333
  text-align center
  margin-bottom 6px

#main-header ul
  text-align center
  margin -10px auto 10px
  font-size 11px
  color: #999;
  text-decoration: none;
  text-shadow: #FFF 0 1px 0;
  text-transform: uppercase;

#main-header ul.skills
  // font-family monospace
  font-size 10px
  color #CCC

#main-header ul.icons
  font-size 20px
  color #666
  padding-top 6px

[class^="icon-"]:before, [class*=" icon-"]:before {
  font-family: FontAwesome;
  font-weight: normal;
  font-style: normal;
  display: inline-block;
  text-decoration: inherit;
}

#main-header li i
  font-family 'FontAwesome'
  font

#main-header li
  padding 0px 4px 0px 4px
  margin-left 0px
  display inline

#main-header a
  text-decoration: none;
  color #545454

@media (max-width: 900px)
  body
    padding 5px 10px
  #container
    width auto
    margin 10px auto
  #main-header h1
    font-family $baseFontFamily
    margin-bottom 12px
    font-weight lighter
  #main-header ul.icons
    font-size 35px
    color #666
    padding-top 12px
  #main-header ul.icons li
    padding 0px 6px 0px 6px